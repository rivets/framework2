{% extends '@util/page.twig' %}

{% block favicons %}
    {% include '@content/favicons.twig' %}
{% endblock favicons %}

{% block head %}
    {% block meta %}
    {% endblock meta %}

    {% block links %}
    {% endblock links %}

    {% block type %}
    {% endblock type %}

    {% block css %}
    {% endblock css %}
{% endblock head %}

{% block body %}
    {% block navigation %}
        {%- include '@surround/navbar.twig' -%}
    {% endblock navigation %}
    {% set margin = 3 %}
    {% if block('navigation') != '' and breadcrumbs is defined %}
        {% set margin = 5 %}
    {% endif %}
    <div class="container mt-{{margin}} mb-3">
        {% block pageheader %}
            <header class="row">
            {% block header %}
                <section class="col mx-auto text-center{% if breadcrumbs is defined %} mt-3{% endif %}">
                    {% block headerbody %}
                        {% include '@surround/header.twig' %}
                    {% endblock headerbody %}
                </section>
            {% endblock header %}
            </header>
        {% endblock pageheader %}

        {% block main %}
        {% endblock main %}

        {% block pagefooter %}
            <footer class="row">
            {% block footer %}
                {% include '@surround/footer.twig' %}
            {% endblock footer %}
            </footer>
        {% endblock pagefooter %}
    </div>
{% endblock body %}

{% block userscripts %}
    {% block scripts %}
    {% endblock scripts %}
{% endblock userscripts %}