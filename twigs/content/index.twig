{% set fwdom = TRUE %}

{% extends '@content/page.twig' %}

{% block onload %}
    $('#alert').on('click', function(){
        fwdom.alert('Hello World')
    })
{% endblock onload %}

{% block headerbody %}
    <h1 class="text-center">Header</h1>
{% endblock headerbody %}

{% block main %}
    <section class="row">
        <aside class="col">
            <p>Left</p>
        </aside>
        <article class="col-md-8">
            <div class="jumbotron">
                This is the middle column
            </div>
            <button id="alert" class="btn btn-lg btn-info" type="button">Alert</button>
        </article>
        <aside id="rightbar" class="col">
            <p>Right</p>
        </aside>
    </section>
{% endblock main %}

{% block footer %}
    <section class="col-md-12">
        <p class="text-center">Footer</p>
    </section>
{% endblock footer %}
