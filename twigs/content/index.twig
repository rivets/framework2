{% set fwdom = TRUE %}

{% extends '@content/page.twig' %}

{% block setup %}
    var toast = new bootstrap.Toast(document.getElementById('ext'), {});
{% endblock setup %}

{% block onload %}
    $('#alert').on('click', function(){
        toast.show();
    })
{% endblock onload %}

{% block headerbody %}
    <h1 class="text-center">Header</h1>
{% endblock headerbody %}

{% block main %}
    <section class="row">
        <aside class="col">
            <p>Left</p>
        </aside>
        <article class="col-md-8">
            <div class="jumbotron">
                This is the middle column
            </div>
            <button id="alert" class="btn btn-lg btn-info" type="button">Alert</button>
        </article>
        <aside id="rightbar" class="col">
            <p>Right</p>
        </aside>
    </section>
    <div class="toast" id="ext" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <strong class="me-auto">Alert!</strong>
            <small>Hello World</small>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
            Hello, world! This is a toast message.
        </div>
    </div>
{% endblock main %}

{% block footer %}
    <section class="col-md-12">
        <p class="text-center">Footer</p>
    </section>
{% endblock footer %}
