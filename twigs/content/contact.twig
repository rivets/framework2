{% extends '@content/page.twig' %}

{% import '@util/attrmacro.twig' as h %}

{% block scripts %}
    <script {{h.urlattr(fwurls.parsley)}}></script>
{% endblock scripts %}

{% block header %}
    <section class="col-md-12 mt-5">
	<h1>Contact</h1>
    </section>
{% endblock header %}

{% block onload %}
    $('#cform').parsley()
{% endblock onload %}

{% block main %}
    <section class="row">
        <article class="offset-md-1 col">
            {% include '@util/message.twig' %}
            <form id="cform" action="#" method="post" role="form">
                <input type="hidden" name="details" value="1"/>
                <div class="form-group">
                    <label for="sj" class="control-label">Subject</label>
                    <input type="text" id="sj" name="subject" placeholder="Subject" class="form-control" required="required"/>
                </div>
                <div class="form-group">
                    <label for="ms" class="control-label">Message</label>
                    <textarea id="ms" name="message" placeholder="Message..." rows="10" class="form-control" required="required"></textarea>
                </div>
                <div class="form-group">
                    <label for="em" class="control-label">Your Email Address</label>
                    <input type="email" id="em" name="sender" placeholder="Email address" class="form-control" required="required"/>
                </div>
                <button class="btn btn-primary" type="submit">Send</button>
            </form>
        </article>
    </section>
{% endblock main %}

{% block pagefooter %}
{% endblock pagefooter %}