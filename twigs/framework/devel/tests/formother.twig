{% macro makehash(hash) %}
    {% set res = '{' %}
    {% for key,value in hash %}
        {% set res = res ~ key ~ ': "' ~ value ~ '"' %}
        {% if not loop.last %}
            {% set res = res ~ ',' %}
        {% endif %}
    {% endfor %}
    {% set res = res ~ '}' %}
    {{res}}
{% endmacro makehash %}

