{% extends '@content/page.twig' %}

{% block headerbody %}
    <h1 class="text-center">Developer tools</h1>
{% endblock headerbody %}

{% block main %}
    <section class="row">
        <article class="mx-auto col-md-10 mb-5">
            {% include '@util/message.twig' %}
            {% if errlog is defined %}
                <pre>
                    {% if raw %}
                        {{errlog|raw}}
                    {% else %}
                        {{errlog}}
                    {% endif %}
                </pre>
            {% else %}
                <p>Select a developer action from the navigation bar.</p>
            {% endif %}
        </article>
    </section>
{% endblock main %}

{% block pagefooter %}
{% endblock pagefooter %}
