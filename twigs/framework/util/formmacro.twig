{% macro select(opts) %}
{% import _self as h %}
    {{h.bsl(opts)}}
    <select class="form-control"{{h.hv('id', opts.id)}}{{h.hv('name', opts.name)}}{{h.fv(opts)}}>
        {% for ov in opts.options %}
            <option value="{{ov.value}}"{% if opts.selected == ov.value %} selected="selected"{% endif %}>{{ov.text|raw}}</option>
        {% endfor %}
        </select>
    {{h.bse(opts)}}
{% endmacro select %}

