{% extends '@content/page.twig' %}

{% block headerblock %}
    <h1>Update the Framework</h1>
{% endblock headerblock %}

{% block main %}
    <section class="row">
        <article class="mx-auto col">
            {% include '@util/message.twig' %}
            <h2>Latest version is Framework {{version}}</h2>
            {% if not older %}
                <p>You have the latest code version</p>
            {% else %}
                <p>You have version {{current}} &mdash; please do a <i>git pull</i> to get the latest version</p>
            {% endif %}
            {% for key,val in updated %}
                <p>"{{key}}" {% if done %}will be {% endif %}updated to "{{val}}"</p>
            {% else %}
                <p>No support software link updates</p>
            {%endfor %}
            {% if not done %}
                <p><a class="btn btn-primary" href="?update=1">Update</a></p>
            {% endif %}
         </article>
    </section>
{% endblock main %}

{% block pagefooter %}
{% endblock pagefooter %}
